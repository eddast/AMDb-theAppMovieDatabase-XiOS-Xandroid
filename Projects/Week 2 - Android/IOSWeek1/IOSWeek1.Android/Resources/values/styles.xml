<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#5A8622</item>
	</style>
	
    <style name="LightTheme.Splash" parent ="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/LaunchScreen</item>
        <item name="android:windowNoTitle">true</item>
    </style>
		
	<style name="LightTheme.Toolbar" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
		<item name="android:background">@color/themeLightBlue</item> 
        <item name="tabIndicatorColor">@color/themeGreen</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TabText.Toolbar</item>
        <item name="tabSelectedTextColor">#FFFFFFFF</item>
    </style>

    <style name="TabText.Toolbar" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8dp</item>
		<item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TabTextLayout.Toolbar</item>
        <item name="textAllCaps">true</item>
    </style>
		
        <style name="TabTextLayout.Toolbar" parent="android:TextAppearance">
            <item name="android:fontFamily">BanglaSangamMN-Bold</item>
        </style>
</resources>